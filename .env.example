# Database (SQLite for Raspberry Pi 5)
DATABASE_URL=sqlite+aiosqlite:///./data/vacation_planner.db
SQLITE_DATA_PATH=./data

# Remove PostgreSQL variables
# POSTGRES_USER=
# POSTGRES_PASSWORD=
# POSTGRES_DB=

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Argon2id (Pi 5 optimized)
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=4

# Admin User (seed)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme-in-production!
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Caddy / HTTPS
DOMAIN=vacation.example.com
EMAIL=admin@example.com
CADDY_DATA_PATH=./caddy_data
HTTPS_MODE=public  # or 'lan' for internal

# Mail (dev mode by default)
MAIL_MODE=dev  # or 'smtp'
MAIL_SMTP_HOST=
MAIL_SMTP_PORT=
MAIL_SMTP_USER=
MAIL_SMTP_PASSWORD=
MAIL_FROM=noreply@example.com

# CORS
CORS_ORIGINS=["https://vacation.example.com"]

# Environment
ENVIRONMENT=development  # or 'production'
